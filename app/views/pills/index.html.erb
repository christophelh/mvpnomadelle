
<header class="banner" style="background-image: url('<%= image_path 'bg1.jpg' %>');">
  <div class="tagline">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <%#= image_tag "logo.png", size:"" %>
        <h3>Find the right emergency pill in any country</h3>
        <%= form_tag pills_path, method: :get do %>
        <%= text_field_tag :query, params[:query], size: 75, class: "form-control form-control-lg", placeholder: "Enter the name of a country?"%>


        <% end %>
      </div>
    </div>
  </div>
</header>

<% if params[:query].present? %>
<div class="summary">
   <h4>There are <%=@pills.count%> types(s) of emergency pills available in <%= params[:query].capitalize %></h4>
</div>
  <div class="container" id="results">
  <div class="row">
    <% @pills.each do |n| %>

    <div class="col-xs-12 col-md-4">
      <div class="card-body" id="card-body">
        <h5 class="card-title" id="#results">
          <%= n.country %></h5>
          <p class="card-text"><i class="fas fa-pills"> </i><%= n.name %></p>
          <p class="card-text"><%= n.model.capitalize %></p>
           <button type="button" class="btn btn-info boutton" data-toggle="modal" data-target="#exampleModalCenter">
             See Pharmacies near you
           </button>
         </div>
       </div>
       <% end %>
     </div>
   </div>
<%end %>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
          <div>
            <div id="map">test</div>
          </div>
        </div>
      </div>
    </div>
</div>



