
<header class="banner" style="background-image: url('<%= image_path 'bg1.jpg' %>');">
  <div class="tagline">
    <div class="row">
      <div class="col-xs-12">
        <h1>Emergency pill in any country</h1>
        <%= form_tag pills_path, method: :get do %>
        <%= text_field_tag :query, params[:query], size: 55, id:"formCountry", class: "form-control form-control-lg", placeholder: "Type a country?"%>
        <%= submit_tag "Search ", :query => nil, class:"boutton" %>
        <% end %>
      </div>
    </div>
  </div>
</header>

<% if params[:query].present? %>
<div class="summary">
  <% if @pills.count == 0%>
   <h4>There are <%= @pills.count%> types(s) of emergency pills available in <%= params[:query].capitalize %></h4>
  <% end %>
</div>
  <div class="container" id="results">
  <div class="row">
    <% @pills.each do |n| %>

    <div class="col-xs-12 col-md-4">
      <div class="card-body" id="card-body">
        <h5 class="card-title" id="#results">
          <%= n.country %></h5>
          <p class="card-text"><i class="fas fa-pills"> </i><%= n.name %></p>
          <p class="card-text"><%= n.model.capitalize %></p>
         </div>
       </div>
       <% end %>
     </div>
   </div>
<%end %>



<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Coming Soon</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
          <div>
            <div id="map">We will be able to show you the nearest pharmacy soon !</div>
          </div>
        </div>
      </div>
    </div>
</div>



